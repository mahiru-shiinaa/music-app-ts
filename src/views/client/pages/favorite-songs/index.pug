extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)

    .row
      each item in songInfos
        .col-6.mb-3
          div(class="song-item")
            div(class="inner-image")
              a(href=`/songs/detail/${item.song.slug}`)
                img(src=item.song.avatar, alt="Song Image")
            div(class="inner-content")
              div(class="inner-title")
                a(href=`/songs/detail/${item.song.slug}`) #{item.song.title}
              div(class="inner-singer") 
                i(class="fa-solid fa-microphone-lines")
                |  #{item.singer.fullName}
              div(class="inner-action inner-heart active", button-favorite=item.song._id)
                i.fa-regular.fa-heart
                |  Yêu thích
              div(class="inner-time") 
                i(class="fa-regular fa-clock")
                |  20/10/2023