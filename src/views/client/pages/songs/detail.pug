extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          .inner-title #{song.title}
          .inner-actions
            .inner-action.inner-time
              i.fa-regular.fa-clock
              |  20/10/2023
            .inner-action.inner-singer
              i.fa-solid.fa-microphone-lines
              |  #{singer.fullName}
            .inner-action.inner-topic
              i.fa-solid.fa-music
              |  #{topic.title}
            .inner-action.inner-listen
              i.fa-solid.fa-headphones
              span #{song.listen} lượt nghe
            .inner-action.inner-like(button-like=song.id)
              i.fa-regular.fa-thumbs-up
              |  <span>#{song.like} thích</span>
            div(class=["inner-action", "inner-heart", isFavorite ? "active" : ""] button-favorite=song.id)
              i.fa-regular.fa-heart
              |  Bài hát yêu thích

          .inner-play
            .inner-avatar
              img(src=song.avatar, alt="Song Image")
            .inner-audio

              div(id="aplayer" data-song=song data-singer=singer)
              //- audio(controls)
              //-   source(src="https://backend.daca.vn/assets/audios/cat-doi-noi-sau.mp3")

          .inner-desc
            .inner-label Mô tả
            .inner-text
              | !{song.description}

          .inner-desc
            .inner-label Lời bài hát
            .inner-text
              | !{song.lyrics}